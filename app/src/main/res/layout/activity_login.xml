<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:background="@drawable/fetchbg"
    tools:context="com.example.mazhuang.travelbag.login">

    <RelativeLayout
        android:layout_width="850px"
        android:layout_height="1300px"
        android:orientation="vertical"
        android:background="@drawable/round"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/image_view"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="52dp"
            android:src="@drawable/user" />

        <EditText
            android:id="@+id/login_edit_pwd"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_alignLeft="@+id/login_edit_account"
            android:layout_alignStart="@+id/login_edit_account"
            android:layout_below="@+id/login_edit_account"
            android:ems="10"
            android:hint="请输入您的密码"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/login_edit_account"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            android:hint="请输入您的用户名"
            android:inputType="textPersonName" />

        <CheckBox
            android:id="@+id/Login_Remember"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/login_edit_pwd"
            android:layout_alignStart="@+id/login_edit_pwd"
            android:layout_below="@+id/login_edit_pwd"
            android:checked="false"
            android:text="记住密码"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/login_text_change_pwd"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignEnd="@+id/login_edit_pwd"
            android:layout_alignRight="@+id/login_edit_pwd"
            android:layout_below="@+id/login_edit_pwd"
            android:text="忘记密码"
            android:textSize="15dp" />

        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="350px"
            android:layout_height="110px"
            android:text="登录"
            android:layout_below="@+id/login_edit_pwd"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:textColor="#FAFAFA"
            android:background="#1160AA"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:id="@+id/login_btn_register"
            android:layout_width="350px"
            android:layout_height="110px"
            android:layout_below="@+id/login_btn_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:text="注册"
            android:textColor="#101010"
            android:textSize="20sp" />

    </RelativeLayout>

</RelativeLayout>
