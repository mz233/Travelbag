<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fetchbg"
    tools:context="com.example.mazhuang.travelbag.FetchActivity">

    <RelativeLayout
        android:layout_width="850px"
        android:layout_height="1300px"
        android:orientation="vertical"
        android:background="@drawable/round"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/name1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/line"
            android:ems="19"
            android:hint=" 姓名"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/phone1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/name1"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/line"
            android:drawablePadding="5dp"
            android:ems="19"
            android:hint=" 电话"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_below="@+id/phone1"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/line"
            android:drawablePadding="5dp"
            android:ems="19"
            android:hint=" 目的地"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/bag"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="70dp"
            android:layout_below="@+id/address1"
            android:background="@drawable/line"
            android:drawablePadding="5dp"
            android:ems="19"
            android:hint=" 行李件数"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/time1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="70dp"
            android:layout_below="@+id/bag"
            android:background="@drawable/line"
            android:drawablePadding="5dp"
            android:ems="19"
            android:hint=" 时间"
            android:textSize="20sp" />

        <Button
            android:id="@+id/sub_Btn3"
            android:layout_width="240px"
            android:layout_height="110px"
            android:text="提交"
            android:layout_below="@+id/time1"
            android:layout_marginTop="60dp"
            android:textSize="20sp"
            android:textColor="#101010"
            android:background="#FFFFFF"
            android:layout_centerHorizontal="true"
            />






    </RelativeLayout>

</RelativeLayout>

