<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.example.mazhuang.travelbag.MainFrame">


    <com.gcssloop.widget.RCRelativeLayout
        android:layout_width="1000dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:id="@+id/view">

        <ImageView
            android:background="@drawable/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />


    </com.gcssloop.widget.RCRelativeLayout>

    <Button
        android:id="@+id/doorBtn"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:background="#A2D5F2"
        android:text="上门取件"
        android:textColor="#515151"
        android:textSize="18sp"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp" />

    <Button
        android:id="@+id/selfBtn"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:layout_gravity="right"
        android:background="@color/primary_text_disabled_material_light"
        android:text="驿站自存"
        android:textColor="#515151"
        android:textSize="18sp"
        android:layout_alignTop="@+id/doorBtn"
        android:layout_toRightOf="@+id/doorBtn"
        android:layout_toEndOf="@+id/doorBtn" />

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#ffff"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="#515151"
        android:text="   生活不止眼前的苟且，\n    还有诗和远方的田野。\n                                            --致旅行"
        android:ellipsize="end"
        android:maxLines="4"
        android:layout_below="@+id/doorBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_alignBottom="@+id/tab_menu" />

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#A2D5F2"
            android:drawablePadding="10dp"
            android:drawableBottom="@drawable/home"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/order"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableBottom="@drawable/order"
            android:background="#A2D5F2"
            android:drawablePadding="10dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/txt_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#A2D5F2"
            android:drawablePadding="10dp"
            android:drawableBottom="@drawable/account"
            android:gravity="center" />



    </LinearLayout>


</RelativeLayout>


